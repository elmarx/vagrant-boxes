{
    "builders": [
        {
            "type": "virtualbox-iso",
            "guest_os_type": "Debian_64",
            "vm_name": "wheezy64",
            "boot_command": [
                "<esc><wait>",
                "install <wait>",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/wheezy64/preseed.cfg <wait>",
                "debian-installer=en_US <wait>",
                "auto <wait>",
                "locale=en_US <wait>",
                "kbd-chooser/method=us <wait>",
                "netcfg/get_hostname={{ .Name }} <wait>",
                "netcfg/get_domain=vagrantup.com <wait>",
                "fb=false <wait>",
                "debconf/frontend=noninteractive <wait>",
                "console-setup/ask_detect=false <wait>",
                "console-keymaps-at/keymap=us <wait>",
                "keyboard-configuration/xkb-keymap=us <wait>",
                "<enter><wait>"
            ],
            "boot_wait": "5s",
            "disk_size": 10140,
            "http_directory": "http",
            "iso_checksum": "8a3c2ad7fd7a9c4c7e9bcb5cae38c135",
            "iso_checksum_type": "md5",
            "iso_url": "http://cdimage.debian.org/debian-cd/7.6.0/amd64/iso-cd/debian-7.6.0-amd64-netinst.iso",
            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "shutdown_command": "echo 'vagrant' | sudo -S /sbin/shutdown -h now",
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "virtualbox_version_file": ".vbox_version",
            "vboxmanage": [
                [ "modifyvm", "{{.Name}}", "--memory", "256" ],
                [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
            ]
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo 'vagrant' | sudo -S bash '{{.Path}}'",
            "scripts": [
                "scripts/wheezy64/virtualbox.sh",
                "scripts/common/puppet-deb.sh",
                "scripts/wheezy64/vagrant.sh",
                "scripts/wheezy64/firstboot.sh",
                "scripts/wheezy64/minimize.sh",
                "scripts/common/zerodisk.sh"
            ],
            "environment_vars": [ "DEB=puppetlabs-release-wheezy.deb" ]
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "compression_level": 9,
            "output": "../build/wheezy64.box"
        }
    ]
}
